<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_turquoise_color"
    tools:context=".Staff_ID_request">

    <View
        android:id="@+id/SIR_View"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.000" />

    <View
        android:id="@+id/SIR_view4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_restaurant_24_px_white"
        app:layout_constraintBottom_toBottomOf="@+id/SIR_view2"
        app:layout_constraintEnd_toEndOf="@+id/SIR_view2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/SIR_view2"
        app:layout_constraintTop_toTopOf="@+id/SIR_view2"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/SIR_view3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="ROT"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/SIR_view2"
        app:layout_constraintEnd_toEndOf="@+id/SIR_view2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/SIR_view2"
        app:layout_constraintTop_toTopOf="@+id/SIR_view2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="InvalidId" />

    <View
        android:id="@+id/SIR_view2"
        android:layout_width="100dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/SIR_View"
        app:layout_constraintEnd_toEndOf="@+id/SIR_View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SIR_View"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SIR_View"
        app:layout_constraintVertical_bias="0.175" />


    <TextView
        android:id="@+id/Staff_ID_req"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Please Insert Your Staff ID:"
        android:textSize="30sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Staff_Id_req_edtxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_button"
        android:text="Prepare"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="doPrepare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="327dp"
        android:layout_marginLeft="327dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="username"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SIR_View"
        app:layout_constraintVertical_bias="0.11" />
</androidx.constraintlayout.widget.ConstraintLayout>